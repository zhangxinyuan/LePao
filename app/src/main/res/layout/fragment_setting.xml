<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
    >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="1dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/them_change"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_go"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/them_change"
                android:background="@drawable/ic_line_horizontal"
                />

            <RelativeLayout
                android:id="@+id/setting_msg_warn"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/them_change"
                android:layout_marginTop="1dp"
                android:background="@drawable/select_selector">

                <TextView
                    android:id="@+id/msgwarn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

                <ToggleButton
                    android:id="@+id/cb_msg_warn"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:checked="true"
                    android:textOff=""
                    android:textOn=""/>
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/setting_msg_warn"
                android:background="@drawable/ic_line_horizontal"
                />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/setting_msg_warn"
                android:layout_marginTop="24dp"
                android:background="@drawable/ic_line_horizontal"
                />

            <RelativeLayout
                android:id="@+id/setting_remove_cache"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/setting_msg_warn"
                android:layout_marginTop="25dp"
                android:background="@drawable/select_selector"
                android:clickable="true">

                <TextView
                    android:id="@+id/delete_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_go"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/setting_remove_cache"
                android:background="@drawable/ic_line_horizontal"
                />

            <RelativeLayout
                android:id="@+id/seeting_share"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/setting_remove_cache"
                android:layout_marginTop="1dp"
                android:background="@drawable/select_selector"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_go"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/seeting_share"
                android:background="@drawable/ic_line_horizontal"
                />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/seeting_share"
                android:layout_marginTop="24dp"
                android:background="@drawable/ic_line_horizontal"
                />

            <RelativeLayout
                android:id="@+id/setting_sofw_update"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/seeting_share"
                android:layout_marginTop="25dp"
                android:background="@drawable/select_selector"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_go"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/setting_sofw_update"
                android:background="@drawable/ic_line_horizontal"
                />

            <RelativeLayout
                android:id="@+id/setting_suggest"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/setting_sofw_update"
                android:layout_marginTop="1dp"
                android:background="@drawable/select_selector"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_go"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/setting_suggest"
                android:background="@drawable/ic_line_horizontal"
                />

            <RelativeLayout
                android:id="@+id/seeting_about"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/setting_suggest"
                android:layout_marginTop="1dp"
                android:background="@drawable/select_selector"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_go"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/seeting_about"
                android:background="@drawable/ic_line_horizontal"
                />

            <Button
                android:id="@+id/exit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/seeting_about"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>